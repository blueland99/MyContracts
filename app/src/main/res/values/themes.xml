<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyContracts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryDarkBlue</item>
        <item name="colorOnPrimary">@color/primaryLightBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondLightBlue1</item>
        <item name="colorSecondaryVariant">@color/secondLightBlue2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>